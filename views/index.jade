doctype 5
html(lang="fr")
  head
    title Acadock
    != js("zepto")
    != js("application")
    != css("application")
    
  body
    h1 Acadock
      a(href="/containers/new")
        button Create container

    ul#containers
      each container in containers
        .info
          li= "ID " + container.id
          li= "Image" + container.image
          li= "Created" + container.created
          li= "Status" +  container.status

