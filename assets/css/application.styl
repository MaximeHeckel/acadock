@import url(http://fonts.googleapis.com/css?family=Open\+Sans);
body
  background-color #ECF0F1
  font-family 'Open Sans', sans-serif
  font-size 14px

h1
  margin 20px auto
  width 78%
  button
    margin 0 0 0 30px
    padding 5px
    border 1px solid

input.cli
  width:70%
  margin-left 15%
  padding 10px 10px 10px 10px
  border 2px solid #777

li.container-info
  list-style none
  width 75%
  margin 0 auto
  background-color white
  padding 10px 10px 10px 10px
  margin-top 10px
  a
    color #1B6C8C
  li
    padding-bottom 10px

form
  margin-top 40

#real-time-container
  margin-left auto
  margin-right auto
  margin-top 20px
  margin-bottom 40px
  width: 78%
  height: 100%
  background-color: white
  pre#container-attachment
    margin-left auto
    margin-right auto
    background-color #002b36
    color #eee8d5
    padding 10px 10px 10px 25px
    width 75%
    max-height 400px
    overflow-y scroll
    overflow-x hidden

.charts
  .charts-container
    padding-top 25px
    padding-left 15%
    .smoothie-graph
      display inline
      .cpu-graph
        display inline-block
        margin-right 40px
      .mem-graph
        display inline-block
        margin-left 40px
    
form
  margin-top 40px

span.pull-right
  float right
  position relative
  bottom 3px

